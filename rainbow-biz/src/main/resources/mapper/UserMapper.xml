<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.milchstrabe.rainbow.biz.mapper.IUserMappper">

	<insert id="addUser">
		INSERT INTO `user` (id,username,password,ram_id)
		VALUE (#{user.id},#{user.username},#{user.password},#{user.ramId})
	</insert>

	<select id="findUserByUsername" resultType="User">
		SELECT id,username,password,ram_id AS ramId
		FROM `user`
		WHERE username=#{username}
	</select>


	<select id="findUserByUserId" resultType="User">
		SELECT id,username,password,ram_id AS ramId
		FROM `user`
		WHERE id=#{id}
	</select>
</mapper>
